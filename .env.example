# ===========================================
# TrendLensX Environment Variables
# ===========================================

# Site Configuration
NEXT_PUBLIC_SITE_URL=https://yourdomain.com
NEXT_PUBLIC_SITE_NAME=TrendLensX

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/trendlensx

# Session & Security
SESSION_SECRET=your-super-secret-session-key-min-32-chars
CSRF_SECRET=your-csrf-secret-key

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=yourdomain.com

# Email & Newsletter (Mailchimp)
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_AUDIENCE_ID=your-audience-id
MAILCHIMP_API_SERVER=us1

# Comments (Disqus)
NEXT_PUBLIC_DISQUS_SHORTNAME=your-disqus-shortname

# Monetization - Google AdSense
NEXT_PUBLIC_ADSENSE_CLIENT_ID=ca-pub-XXXXXXXXXX

# Payment Gateways
# Stripe
STRIPE_PUBLIC_KEY=pk_test_XXXXXXXXXX
STRIPE_SECRET_KEY=sk_test_XXXXXXXXXX
STRIPE_WEBHOOK_SECRET=whsec_XXXXXXXXXX

# Paystack
PAYSTACK_PUBLIC_KEY=pk_test_XXXXXXXXXX
PAYSTACK_SECRET_KEY=sk_test_XXXXXXXXXX

# Flutterwave
FLUTTERWAVE_PUBLIC_KEY=FLWPUBK_TEST-XXXXXXXXXX
FLUTTERWAVE_SECRET_KEY=FLWSECK_TEST-XXXXXXXXXX

# Social OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# API Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000
